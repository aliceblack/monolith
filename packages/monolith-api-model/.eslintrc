{
  "extends": "airbnb",
  "env":{
    "node": true,
    "es6": true,
    "mocha": true
  },
  "plugins": [
    "mocha"
  ],
  "rules": {
    "semi":2,
    "no-console":0,
    "linebreak-style":0,
    "indent":["error", 4],
    "max-len": ["error", { "ignoreComments": true }],
    "mocha/no-exclusive-tests": "error"
  }
}
